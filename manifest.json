{
  "action": {
    "default_title": "Emulate Dislexical disorder",
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "src/service-worker.js",
    "type": "module"
  },
  "description": "This extension demonstrates a dislexical user disorder when you reading page text.",
  "host_permissions": [
    "*://*/?*"
  ],
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "manifest_version": 3,
  "minimum_chrome_version": "92",
  "name": "Dislexic site content",
  "options_ui": {
    "page": "settings/settings.html",
    "open_in_tab": false
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "scripting",
    "storage",
    "tabs"
  ],
  "version": "0.0.1",
  "web_accessible_resources": [{
    "resources": ["src/dislexic.js"],
    "matches": [
      "http://*/*",
      "https://*/*"
    ]
  }]
}
